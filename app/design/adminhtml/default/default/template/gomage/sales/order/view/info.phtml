<?php
	
	
	$i = 0;
	
	$blocks = $this->getSortedChildren();
	
	$total_blocks = count($blocks);
	
	foreach ($blocks as $name): if($content = trim($this->getChildHtml($name))){ ?>
		
		<div class="box-<?php echo $i%2 ? 'right' : 'left';?>">
		    <?php echo $content; ?>
		</div>
		
		<?php $i++; if($i%2==0 || $i == $total_blocks):?><div class="clear"></div><?php endif;?>
		
	<?php } endforeach; ?>
</div>