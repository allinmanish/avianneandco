<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>ajaxlist/navigation.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>ajaxlist/loader.css</name>
            </action>
        </reference>
    </default>
    
    <catalog_product_view>
        <reference name="head">
            <action method="removeItem">
                <type>skin_js</type>
                <name>ajaxlist/navigation.js</name>
            </action>
            <action method="removeItem">
                <type>skin_css</type>
                <name>ajaxlist/loader.css</name>
            </action>
        </reference>
    </catalog_product_view>
    
    
</layout>

