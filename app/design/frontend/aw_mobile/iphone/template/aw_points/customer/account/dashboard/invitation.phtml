                    <fieldset>
                    <table class="data-table" id="invitelist-table">
                        <thead>
                            <tr>
                                <th><?php echo $this->__('E-mail') ?></th>
                                <th><?php echo $this->__('Status') ?></th>
                            </tr>
                        </thead>
                        <tbody>
                            <?php foreach ($block->getCollection() as $item): ?>
                                <tr>
                                    <td>
                                        <span class="nobr"><?php echo $item->getEmail() ?></span>
                                    </td>
                                    <td>
                                        <span class="nobr"><?php echo $item->getStatus() ?></span>
                                    </td>
                                </tr>
                            <?php endforeach ?>
                            </tbody>
                        </table>
                        <script type="text/javascript">decorateTable('invitelist-table')</script>
                </fieldset>
            <?php else: ?>
              <p><?php echo $this->__("You haven't sent any invitation yet") ?></p>
            <?php endif ?>
        </div>
    </div>
