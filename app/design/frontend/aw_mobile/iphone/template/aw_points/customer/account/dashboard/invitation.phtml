<div>
    <div class="dashboard-block">
        <div class="page-head">
            <h3><?php echo $this->__('Points & Rewards Invitation') ?></h3>
            <a class="edit" href="<?php echo $this->getUrl('points/invitation/index') ?>"><img src="<?php echo $this->getSkinUrl('images/edit.gif') ?>" alt="<?php echo $this->__('Edit') ?>" /></a>
