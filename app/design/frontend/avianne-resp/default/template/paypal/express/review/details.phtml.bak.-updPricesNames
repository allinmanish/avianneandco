	    	$result = $this->getChildHtml('totals'); 
	    	$result = str_replace(array("Shipping & Handling (FedEx - FedEx International Shipping)"), array("FedEx International Shipping"), $result);
	    	$result = str_replace(array("Shipping & Handling (UPS Shipping - 2 Day Air)"), array("UPS 2 Day Air"), $result);
	    	$result = str_replace(array("Shipping & Handling (Expedited Shipping - UPS Overnight Delivery)"), array("UPS Next Day Air"), $result);
