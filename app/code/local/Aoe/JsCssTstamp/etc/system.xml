<?xml version="1.0" ?>
<config>
	<sections>

		<dev translate="label" module="apilog">
			<groups>
				<js>
					<fields>
						<protocolRelativeUris translate="label">
							<label>Protocol relative uris</label>
							<comment><![CDATA[e.g. http://example.com -> //example.com]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</protocolRelativeUris>
						<lifetime translate="label">
							<label>Lifetime</label>
							<comment><![CDATA[Expires and Cache-Control header lifetimes to be set while uploading to Amazon S3 (will only work with OnePica_ImageCDN enabled)]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</lifetime>
						<storage translate="label">
							<label>Storage</label>
							<frontend_type>select</frontend_type>
							<source_model>aoejscsststamp/system_config_source_storage</source_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</storage>
					</fields>
				</js>
				<css>
					<fields>
						<protocolRelativeUris translate="label">
							<label>Protocol relative uris</label>
							<comment><![CDATA[e.g. http://example.com -> //example.com]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</protocolRelativeUris>
						<lifetime translate="label">
							<label>Lifetime</label>
							<comment><![CDATA[Expires and Cache-Control header lifetimes to be set while uploading to Amazon S3 (will only work with OnePica_ImageCDN enabled)]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</lifetime>
						<storage translate="label">
							<label>Storage</label>
							<frontend_type>select</frontend_type>
							<source_model>aoejscsststamp/system_config_source_storage</source_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</storage>
						<addTstampToAssets translate="label">
							<label>Add version to assets (gif|png|jpg)</label>
							<comment><![CDATA[This will add a version key to the assets linked in your css files. E.g. http://example.com/foo.jpg -> http://example.com/foo.1357433382.jpg. Please note that the files are not renamed. Check readme.txt for instructions on how to configure mod_rewrite for this feature]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</addTstampToAssets>
					</fields>
				</css>
			</groups>
		</dev>
	</sections>
</config>