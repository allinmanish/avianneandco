<?xml version="1.0"?>
<config>
    <modules>
        <WSM_Extras>
            <version>0.1.0</version>
        </WSM_Extras>
    </modules>
    <adminhtml>
        <!-- The <layout> updates allow us to define our block layouts in a separate file so are aren't messin' with the Magento layout files.  -->
        <layout>
            <updates>
                <extras>
                    <file>extras.xml</file>
                </extras>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <helpers>
            <extras>
                <class>WSM_Extras_Helper</class>
            </extras>
        </helpers>
    </global>
</config>
