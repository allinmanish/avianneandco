<config>
	<api>
		<resources>
			<php4u_blastlucene translate="title" module="php4u">
				<title>Php4u Lucene Search API</title>
				<model>blastlucenesearch/search_api</model>
				<acl>php4u/blastlucenesearch</acl>
				<methods>
					<search translate="title" module="php4u">
						<title>Search</title>
						<method>search</method>
						<acl>php4u/blastlucenesearch/search</acl>
					</search>
				</methods>
			</php4u_blastlucene>
		</resources>
		<acl>
			<resources>
				<php4u translate="title" module="php4u">
					<title>Php4u</title>
					<sort_order>100</sort_order>
					<blastlucenesearch translate="title" module="php4u">
						<title>Blast Search Lucene</title>
						<sort_order>100</sort_order>
						<search translate="title" module="php4u">
							<title>Search product by query</title>
							<sort_order>10</sort_order>
						</search>
					</blastlucenesearch>	
				</php4u>
			</resources>
		</acl>
	</api>
</config>
